{
  "compilerOptions": {
    "target": "ES2020",           // modern JS features
    "module": "commonjs",         // Node-friendly
    "outDir": "dist",             // compiled files go here
    "rootDir": ".",               // source root
    "strict": true,               // type safety
    "esModuleInterop": true,      // allow default imports
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,              // optional JS files
    "checkJs": false
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}

