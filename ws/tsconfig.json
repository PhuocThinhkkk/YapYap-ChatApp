{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "target": "ES2020",             // modern JS features
    "module": "commonjs",           // Node.js module system
    "outDir": "dist",               // compiled JS files go here
    "rootDir": ".",                 // source files root
    "strict": true,                 // recommended for type safety
    "esModuleInterop": true,        // for import/export compatibility
    "forceConsistentCasingInFileNames": true
  },
   "include": ["**/*.ts", "**/*.js"],
  "exclude": ["node_modules"] 
}

